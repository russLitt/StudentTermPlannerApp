<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Assessment type:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assmnt_title" />

    <TextView
        android:id="@+id/assmnt_title"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginTop="200dp"
        android:ellipsize="end"
        android:gravity="center"
        android:hint="Assessment title"
        android:maxLines="1"
        android:textColor="@color/term_text_color"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/assmnt_due_date"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:ems="10"
        android:gravity="center"
        android:hint="Assessment due date"
        android:inputType="date"
        android:maxLines="1"
        android:textColor="@color/term_text_color"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:layout_marginTop="44dp"
        android:gravity="center"
        android:text="Due date:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assmnt_switch" />

    <TextView
        android:id="@+id/assmnt_switch"
        android:layout_width="208dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:gravity="center"
        android:text="assessment type"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

