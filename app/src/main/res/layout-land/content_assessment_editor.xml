<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Switch
        android:id="@+id/assmnt_switch"
        android:layout_width="196dp"
        android:layout_height="45dp"
        android:layout_marginTop="208dp"
        android:checked="false"
        android:gravity="center"
        android:text="Performance"
        android:textOff="Performance"
        android:textOn="Objective"
        app:layout_constraintEnd_toStartOf="@+id/assmnt_alert_check"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/assmnt_title"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="44dp"
        android:hint="Assessment title"
        android:imeOptions="actionDone|flagNoExtractUi"
        app:layout_constraintEnd_toStartOf="@+id/assmnt_due_date"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assmnt_switch" />

    <EditText
        android:id="@+id/assmnt_due_date"
        android:layout_width="228dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:ems="10"
        android:hint="Assessment due date"
        android:imeOptions="actionDone|flagNoExtractUi"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assmnt_alert_check" />

    <CheckBox
        android:id="@+id/assmnt_alert_check"
        android:layout_width="178dp"
        android:layout_height="38dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Send due date alert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>